<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.PhoneNumberActivity"
        android:background="@color/colorPrimaryDark">
    <ImageView
            android:layout_height="150dp"
            android:layout_width="332dp"
            android:background="@drawable/text_logo"
            android:layout_marginTop="100dp"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:ems="10"
            android:maxLength="5"
            android:gravity="center"
            android:digits="0123456789"
            android:id="@+id/codeField"
            android:background="@drawable/edit_text_login"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="60dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="180dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/codeButton"

        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button"
        android:text="Продолжить"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@id/codeField"
        app:layout_constraintTop_toBottomOf="@id/codeField"

        />
    <ImageView
            android:src="@drawable/cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:srcCompat="@drawable/cl" android:scaleType="fitEnd"/>
    <TextView
            android:text="Введите код из Telegram:"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/codeField"

            android:layout_marginBottom="5dp"
    />

</android.support.constraint.ConstraintLayout>